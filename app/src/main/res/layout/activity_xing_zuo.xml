<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xing_zuo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="yushuangming.test01.u2.activity.XingZuoActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:background="@drawable/xingzuobeijing"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/xingzuohead"
            android:src="@drawable/icon_sx_21"
            android:layout_marginLeft="60dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000"
                android:drawableLeft="@drawable/xztb_tc1"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:text="白羊座"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/xingzuo" />

            <TextView
                android:id="@+id/riqi"
    android:textSize="18sp"
                android:textColor="#000"
                android:text="3.21-4.19  长不大的小孩"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/xinxi"
        android:padding="5dp"
        android:background="@drawable/xingzuo_shape"
        android:text=""
        android:textSize="17sp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#fff"
            android:background="#a1ffd8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="星座运势"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/yunshi" />

        <TextView
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="星座档案"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/dangan" />

    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
