<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jie_ment_sou_suo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yushuangming.test01.u2.activity.JieMentSouSuoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#1cc9ac"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et"
            android:background="#fff"
            android:drawableLeft="@drawable/zgjm_sousuo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="sousuo"
            android:layout_marginLeft="10dp"
            android:background="#17c431"
            android:text="搜索"
            android:textSize="18sp"
            android:layout_width="70dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <ListView
android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
